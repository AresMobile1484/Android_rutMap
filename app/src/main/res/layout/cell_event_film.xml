<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="187dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src = "@drawable/background_film1"
        android:id="@+id/imgvProduct"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imgvSpinner"
        android:layout_centerVertical="true"
        android:background="@anim/spinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient1_2"
            android:id="@+id/imgvBack"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:text="FILM"
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/btn_film"
            android:id="@+id/tvFilm"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_above="@+id/lyObjPoint"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_above="@+id/lyObjPoint"
            android:layout_width="300dp">

            <TextView
                android:text="Elle Dolazi"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:id="@+id/tvTitle"
                android:layout_weight="3.33"
                android:layout_above="@+id/lyObjPoint"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/lyObjPoint"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="Cinema City"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvObjPoint" />

            <ImageView
                app:srcCompat="@drawable/ic_dot"
                android:id="@+id/imgvDot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvObjPoint"
                android:layout_marginLeft="5dp" />
            <TextView
                android:text="02.08.2017-19:00h"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEvenTime"
                android:layout_toRightOf="@+id/tvObjPoint"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>